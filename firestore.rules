rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin
    function isAdmin() {
      return request.auth.uid == 'vaOyXZOlnQciAzaG2Q0E9qRXZTz1';
    }

    // Carts collection
    match /carts/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Orders collection
    match /orders/{orderId} {
      // Users can create orders if they are logged in.
      allow create: if request.auth.uid != null;
      // Users can read their own orders. Admins can read or update any order.
      allow read, update: if request.auth.uid == resource.data.userId || isAdmin();
      // Admins can list all orders.
      allow list: if isAdmin();
    }
  }
}
