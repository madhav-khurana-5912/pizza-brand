rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Carts: Users can only read and write to their own cart.
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Orders:
    // - Users can create their own orders.
    // - Users can read their own orders.
    // - Admin can read and update any order.
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == 'vaOyXZOlnQciAzaG2Q0E9qRXZTz1');
      allow list: if request.auth != null && request.auth.uid == 'vaOyXZOlnQciAzaG2Q0E9qRXZTz1';
      allow update: if request.auth != null && request.auth.uid == 'vaOyXZOlnQciAzaG2Q0E9qRXZTz1';
    }
  }
}
